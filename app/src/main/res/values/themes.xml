<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NoteApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_primary</item>
        <item name="colorPrimaryVariant">@color/light_primary_container</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_secondary</item>
        <item name="colorSecondaryVariant">@color/light_secondary_container</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Background color. -->
        <item name="android:colorBackground">@color/light_background</item>
        <item name="colorOnBackground">@color/light_on_background</item>
        <!-- Surface color. -->
        <item name="colorSurface">@color/light_background</item>
        <item name="colorOnSurface">@color/light_on_background</item>
        <item name="colorSurfaceVariant">@color/light_surface_variant</item>
        <item name="colorOnSurfaceVariant">@color/light_on_surface_variant</item>
        <!-- Error color. -->
        <item name="colorError">@color/light_error</item>
        <item name="colorOnError">@color/white</item>
        <item name="colorErrorContainer">@color/light_error_container</item>
        <item name="colorOnErrorContainer">@color/light_error_on_container</item>
        <!-- Tertiary color. -->
        <item name="colorTertiary">@color/light_tertiary</item>
        <item name="colorOnTertiary">@color/white</item>
        <item name="colorTertiaryContainer">@color/light_tertiary_container</item>
        <item name="colorOnTertiaryContainer">@color/light_on_tertiary_container</item>
        <!-- Outline color. -->
        <item name="colorOutline">@color/light_outline</item>

    </style>
</resources>