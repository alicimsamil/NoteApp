<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".feature.detail.DetailScreenFragment">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivDetailBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="1dp"
        android:src="@drawable/arrow_back_48px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivDetailNoteItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/mountain_view" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvDetailNoteItemDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_small"
        android:layout_marginTop="@dimen/space_small_small"
        android:textAppearance="?attr/textAppearanceSubtitle2"
        android:textColor="?attr/colorOnTertiaryContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivDetailNoteItem"
        tools:text="13/02/2000" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvDetailNoteItemTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/space_small"
        android:layout_marginTop="@dimen/space_small"
        android:textAppearance="?attr/textAppearanceHeadline4"
        android:textColor="?attr/colorOnTertiaryContainer"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvDetailNoteItemDate"
        tools:text="Bu not Ali tarafından oluşturulmuştur" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvDetailNoteItemDesc"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/space_small"
        android:layout_marginTop="@dimen/space_big_small"
        android:textAppearance="?attr/textAppearanceBody1"
        android:textColor="?attr/colorOnTertiaryContainer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvDetailNoteItemTitle"
        tools:text="Rüzgârla gelen İlkbahar gibi gözlerin Bıktım geceden Her zaman güzeldi düşlerim" />


</androidx.constraintlayout.widget.ConstraintLayout>